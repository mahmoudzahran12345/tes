<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActvity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_menu_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:text="Setting"
            android:textColor="#FAFBFB"
            android:textSize="40dp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/image_view3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_editprofile"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_text"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:drawableRight="@drawable/arrow"
        android:padding="20dp"
        android:paddingTop="20dp"
        android:text="EditProfile"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <TextView
        android:id="@+id/text_chang"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_text"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:drawableRight="@drawable/arrow"
        android:padding="20dp"
        android:text="Change Langauge"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_editprofile" />

    <TextView
        android:id="@+id/text_contact"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_text"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:drawableRight="@drawable/arrow"
        android:padding="20dp"
        android:text="Contact us"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_chang" />

    <TextView
        android:id="@+id/text_share"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_text"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:drawableRight="@drawable/arrow"
        android:padding="20dp"
        android:textColor="@color/main_color"
        android:textAlignment="center"
        android:text="Share App"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_contact" />

    <TextView
        android:id="@+id/text_shareapp"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:text="Share Rate"
        android:textSize="30dp"
        android:textStyle="italic"
        android:background="@drawable/style_text"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:drawableRight="@drawable/arrow"
        android:padding="20dp"
        android:textColor="@color/main_color"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_share" />

    <TextView
        android:id="@+id/text_logout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="27dp"
        android:text="Log Out"
        android:textSize="30dp"
        android:textStyle="italic"
        android:background="@drawable/style_text"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:drawableRight="@drawable/arrow"
        android:padding="20dp"
        android:textColor="@color/main_color"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_shareapp" />



</androidx.constraintlayout.widget.ConstraintLayout>